<div class="param-folder">
  {# Close Twig #}
  {% set _title_ = {'status': true, 'value': "Importer une image"} %}
  {% include "/documents/templates/close.twig" with _title_ %}

  <form class="form-folder petit-form" action="/documents/add/img/{{ folder.id }}" enctype="multipart/form-data" method="post">

    <div>
      <label for="import_img_name">Entrer le nom de l'image :</label>
      <input type="text" name="import_img_name" id="import_img_name" placeholder="Nom du document" required>
    </div>

    <div>
      <label for="import_img_description">Entrer la description de l'image :</label>
      <textarea type="text" name="import_img_description" id="import_img_description" placeholder="Nom du document"></textarea>
    </div>

    <div>
      <label for="upload-img">Sélectionner l'image :</label>
      <input id="upload-img" type="file" name="img" accept="image/*" onchange="actionPdfFile('img')">
      <input type="hidden" name="MAX_FILE_SIZE" value="5000000">
    </div>

    <div class="form-folder-button">
      <button type="submit" value="upload" name="button">Importer l'image</button>
    </div>

  </form>

</div>
